{
  "name": "satellite-docs",
  "version": "0.0.1",
  "description": "*Unofficial* Adobe DTM Satellite Documentation ðŸ›°",
  "main": "README.md",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "markdownlint": "markdownlint README.md",
    "spelling": "mdspell '**/*.md' '!**/node_modules/**/*.md' --ignore-numbers",
    "spelling:ci": "mdspell '**/*.md' '!**/node_modules/**/*.md' --ignore-numbers --report",
    "start": "npm i",
    "test": "npm run markdownlint && npm run write-good && npm run spelling",
    "test:ci": "npm run markdownlint && npm run write-good && npm run spelling:ci",
    "updates:check": "npx ncu",
    "write-good": "write-good *.md --no-passive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unofficial-analytics-documentation/satellite-docs.git"
  },
  "keywords": [
    "Satellite",
    "_satellite",
    "adobe",
    "adobe-dtm",
    "glossary"
  ],
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unofficial-analytics-documentation/satellite-docs/issues"
  },
  "homepage": "https://github.com/unofficial-analytics-documentation/satellite-docs#readme",
  "devDependencies": {
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli": "^0.22.0",
    "npm-check-updates": "^4.1.2",
    "write-good": "^1.0.2"
  }
}
